<div class="index-post">
  <div class="index-post-date">{{ post.date | date: '%d %b %Y' }}</div>
  <a href='{{ post.url | prepend: site.baseurl }}'>{{ post.title }}</a>
  <br>

  {% for tag in post.tags %}
  <a class="index-tag" href='{{ site.baseurl }}/tag/{{ tag }}/'>{{ tag }}</a>
  {% endfor %}
</div>